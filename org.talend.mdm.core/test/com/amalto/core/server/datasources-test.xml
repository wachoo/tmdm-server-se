<datasources xmlns="http://www.talend.com/mdm/datasources">
    <datasource name="H2-Default">
        <master>
            <type>RDBMS</type>
            <rdbms-configuration>
                <dialect>H2</dialect>
                <connection-driver-class>org.h2.Driver</connection-driver-class>
                <connection-url>jdbc:h2:${project.build.directory}/data/h2_default</connection-url>
                <fulltext-index-directory>${project.build.directory}/indexes/H2_DEFAULT</fulltext-index-directory>
                <schema-generation>create</schema-generation>
            </rdbms-configuration>
        </master>

    </datasource>

    <datasource name="H2-DS1">
        <master>
            <type>RDBMS</type>
            <rdbms-configuration>
                <dialect>H2</dialect>
                <connection-driver-class>org.h2.Driver</connection-driver-class>
                <connection-url>jdbc:h2:${project.build.directory}/data/h2_ds1</connection-url>
                <schema-generation>create</schema-generation>
                <case-sensitive-search>true</case-sensitive-search>
            </rdbms-configuration>
        </master>

    </datasource>

    <datasource name="H2-DS2">
        <master>
            <type>RDBMS</type>
            <rdbms-configuration>
                <dialect>H2</dialect>
                <connection-driver-class>org.h2.Driver</connection-driver-class>
                <connection-url>jdbc:h2:${project.build.directory}/data/h2_ds2</connection-url>
                <schema-generation>create</schema-generation>
                <case-sensitive-search>false</case-sensitive-search>
            </rdbms-configuration>
        </master>
        <staging>
            <type>RDBMS</type>
            <rdbms-configuration>
                <dialect>H2</dialect>
                <connection-driver-class>org.h2.Driver</connection-driver-class>
                <connection-url>jdbc:h2:${project.build.directory}/data/h2_staging_ds2</connection-url>
                <schema-generation>create</schema-generation>
            </rdbms-configuration>
        </staging>
        <system>
            <type>RDBMS</type>
            <rdbms-configuration>
                <dialect>H2</dialect>
                <connection-driver-class>org.h2.Driver</connection-driver-class>
                <connection-url>jdbc:h2:${project.build.directory}/data/system;MVCC=true</connection-url>
                <schema-generation>create</schema-generation>
            </rdbms-configuration>
        </system>
    </datasource>

    <datasource name="RDBMS-1-NO-FT">
        <master>
            <type>RDBMS</type>
            <rdbms-configuration>
                <dialect>H2</dialect>
                <connection-driver-class>org.h2.Driver</connection-driver-class>
                <connection-url>jdbc:h2:${project.build.directory}/data/rdbms_1_no_ft</connection-url>
                <schema-generation>create</schema-generation>
            </rdbms-configuration>
        </master>

    </datasource>
</datasources>
